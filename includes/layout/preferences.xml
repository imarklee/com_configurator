<?xml version="1.0" encoding="utf-8"?>
<preferences>
	<params group="cfg_prefs">
		<param name="show_intros" default="1" type="radio" label="Show tab descriptions">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_branding" default="1" type="radio" label="Show top branding">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_footer" default="1" type="radio" label="Show footer links">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="check_updates" default="1" type="radio" label="Automatically check for updates">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="short_keys" default="1" type="radio" label="Enable keyboard shortcuts">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="shelf_position" default="1" type="radio" label="Shelf position">
			<option value="1">Top</option>
			<option value="2">Bottom</option>
		</param>
		<param name="bottom_save" default="3" type="list" label="Show bottom save bar">
			<option value="1">Always show the save bar</option>
			<option value="2">When there are unsaved changes</option>
			<option value="3">When the top save button is not visible</option>
			<option value="4">When there are unsaved change &amp; the top save button is not visible</option>
			<option value="0">Do not show the save bar</option>			
		</param>
		<param name="settings_effect" default="accordion" type="list" label="Display option groups as" position="last">
			<option value="toggle">Toggle Panels</option>
			<option value="accordion">Accordion Panels</option>
			<option value="all">Always Show</option>
		</param>
	</params>
</preferences>