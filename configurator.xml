	</deprecated>
	
	<media />
	<languages />
	
	<restorepoint>
		<customdirs>
			<dir>plugins/system/morphcache</dir>
			<dir>morph_assets</dir>
			<dir>morph_recycle_bin</dir>
			<dir>templates/morph</dir>
		</customdirs>
		<customfiles>
			<file>plugins/system/morphcache.php</file>
