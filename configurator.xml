    <install>
        <sql>
            <file charset="utf8" driver="mysql">install.sql</file>
        </sql>
    </install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>

	<administration>
		<menu img="components/com_configurator/images/icon-16-configurator.png">COM_CONFIGURATOR</menu>
		<files>
			<folder>controllers</folder>
			<folder>css</folder>
			<folder>helpers</folder>
